use lisp::{Atom, Expr};

#[pub]
expr -> Expr
    = atom
    / "(" es:expr ++ " " ")" { Expr::Sexpr(es) }

atom -> Expr
    = symbol 
    / number

symbol -> Expr
    = [a-zA-Z-+/*]+ { Expr::Atom(Atom::Sym(match_str.to_string())) }

number -> Expr
    = "-"?[0-9]+ { Expr::Atom(Atom::Int(match_str.parse().unwrap())) }
