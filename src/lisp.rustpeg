use lisp::{Atom, Expr};

#[pub]
expr -> Expr
    = atom
    / sexpr
    / qexpr

sexpr -> Expr
    = "(" se:expr ++ " " ")" { Expr::Sexpr(se) }

qexpr -> Expr
    = "'" se:sexpr { Expr::Qexpr(box se) }
    / "'" a:atom { Expr::Qexpr(box a) }

atom -> Expr
    = symbol 
    / number

symbol -> Expr
    = [a-zA-Z-+/*]+ { Expr::Atom(Atom::Sym(match_str.to_string())) }

number -> Expr
    = "-"?[0-9]+ { Expr::Atom(Atom::Int(match_str.parse().unwrap())) }
